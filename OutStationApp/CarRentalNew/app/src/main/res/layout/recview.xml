<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/cardview_border"
    android:backgroundTint="@color/bg_color_selector"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:id="@+id/car_image"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/cardview_border"
            android:backgroundTint="#ffffff"
            android:src="@drawable/jaguar" />
        <!-- android:background="@drawable/textview_border"-->


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_margin="2dp"
            android:layout_toStartOf="@+id/type"
            android:layout_toEndOf="@id/car_image"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:textColor="@color/text_color_selector"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/seater"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/name"
            android:layout_alignStart="@+id/name"
            android:layout_alignEnd="@id/name"
            android:layout_margin="2dp"
            android:text="4 Seater"
            android:textColor="#A9A9A9" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/seater"
            android:layout_alignBottom="@id/car_image"
            android:layout_toEndOf="@+id/car_image"
            android:textColor="@color/text_color_selector"
            android:textSize="17dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ratingsLL"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@id/seater"
            android:layout_alignStart="@+id/seater"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/rate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ratingsLL"
            android:layout_alignParentEnd="true"
            android:textColor="@color/text_color_selector"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp"
            android:background="@drawable/cardview_border"
            android:backgroundTint="#43a047"
            android:padding="4dp"
            android:textColor="#ffffff" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
